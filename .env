# --- BOT SOZLAMALARI ---
# @BotFather orqali olingan bot tokeningizni shu yerga qo'ying
BOT_TOKEN="BOT TOKEN"

# --- ADMIN SOZLAMALARI ---
# Bot adminlarining Telegram ID raqamlari. Bir nechta bo'lsa, vergul bilan ajrating.
ADMIN_IDS="admin id"

# --- MAJBURIY A'ZOLIK SOZLAMALARI ---
# Foydalanuvchi a'zo bo'lishi kerak bo'lgan kanallar.
# Kanal username (@username) yoki ID raqami (-100...) formatida bo'lishi mumkin.
# Bir nechta bo'lsa, vergul bilan ajrating. Bo'sh qoldirsangiz, bu funksiya o'chadi.
REQUIRED_CHANNELS="@adsasdsfeqf3,-6465465465"

# --- XAVFSIZLIK SOZLAMALARI ---
# Telefon raqamlarini shifrlash uchun maxfiy kalit.
# Ushbu buyruqni terminalda ishga tushirib, natijani shu yerga qo'ying:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY="secret key"

# --- MA'LUMOTLAR BAZASI VA REDIS SOZLAMALARI ---
# Agar bularni o'zgartirish shart bo'lmasa, tegmasdan qoldiring.
# Bular standart qiymatlar. Docker yoki boshqa muhitda ishlatganda o'zgartirish mumkin.

# SQLite ma'lumotlar bazasi fayli nomi
DB_NAME="vote_bot_prod.db"

# Redis serveri manzili
REDIS_HOST="localhost"
REDIS_PORT=6379

# Redis ma'lumotlar bazalari raqamlari
REDIS_DB_FSM=0
REDIS_DB_CAPTCHA=1

# --- CAPTCHA SOZLAMALARI ---
CAPTCHA_TIMEOUT_SECONDS=60
CAPTCHA_MAX_ATTEMPTS=3
CAPTCHA_BLOCK_DURATION_MINUTES=5
